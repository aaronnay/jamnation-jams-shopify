{% layout settings.customer_layout %}
<div id="customer-activate">
  <h1 class="title header-bar text-center">Activate Account</h1>
  <br /><br />
  
  <p class="text-center">
    Create your password to activate your account.
  </p>
  <br /><br />
  
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
      {% form 'activate_customer_password' %}
      <div>
        {{ form.errors | default_errors }}
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="customer_password">Password*</label>
      		<input type="password" value="" name="customer[password]" id="customer_password" class="form-control" />
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="customer_password_confirmation">Confirm Password*</label>
            <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="form-control" />
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="action_bottom col-sm-offset-3 col-sm-6">
          <input class="btn btn-default btn-block" type="submit" value="activate account" />
        </div>
      </div>
      {% endform %}
    </div>
  </div>
</div>

<script type="text/javascript">
  jamnationFns.forceSsl();
</script>