<div id="page">
    <!-- <h1>{{ page.title }}</h1> -->
    <div class="page-with-contact-form">
        {{ page.content }}
        <br /><br />

        {% form 'contact' %}

        {% if form.posted_successfully? %}
        <div class="successForm feedback text-center feedback-msg">
            Thanks! We'll get back to you as soon as possible.
        </div>
        {% else %}
        <h3 class="text-center">need help picking out the perfect jam?</h3>
        <br />
        <p class="text-center">
            Questions about your order? Just want to say hi?<br />
            Email us at
            <a href="mailto:info@jamnationjams.com" title="Email us" class="underline">info@jamnationjams.com</a>
            or fill out the form below.
        </p>
        <br />
        <p class="text-center">
            You can also call us at 800-653-0320.
        </p>
        <br /><br />

        <div class="row">
            <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
                {% if form.errors %}
                <div class="errorForm feedback text-danger">
                    <p class="lead">Oops, sorry. We were unable to submit your inquiry because it contained {{ form.errors | size | pluralize: 'an error', 'a few errors' }}. Please correct the following and submit again:</p>
                    {% for field in form.errors %}
                    <p>The {{ field | capitalize | replace: 'Body', 'Message' }} field {{ form.errors.messages[field] }}.</p>
                    {% endfor %}
                </div>
                {% endif %}

                <div id="contactFormWrapper">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="contactFormName">Your Name</label>
                                <input type="text" id="contactFormName" name="contact[name]" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="contactFormEmail">Your Email*</label>
                                <input type="email" id="contactFormEmail" name="contact[email]" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <!--<p>
                    <label>Phone Number:</label><br/>
                    <input type="telephone" id="contactFormTelephone" name="contact[phone]" placeholder="555-555-1234" />
                    </p>-->
                    <div class="form-group">
                        <label for="contactFormSubject">Subject</label>
                        <input type="text" id="contactFormSubject" name="contact[subject]" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="contactFormMessage">Message*</label>
                        <textarea rows="4" id="contactFormMessage" name="contact[body]" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-6">
                            <input type="submit" id="contactFormSubmit" value="submit" class="btn btn-default btn-block" />
                            <p class="help-block text-center">* Required for Submission</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endif %}

        {% endform %}
    </div>
</div>
